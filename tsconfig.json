{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "resolveJsonModule": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "paths": {
            "~mock-data/*": ["public/mock-data/*"],
            "@/*": ["src/*"],
            "@components": ["src/common/components"],
            "@const": ["src/common/const"],
            "@directives": ["src/common/directives"],
            "@filters": ["src/common/filters"],
            "@mixins": ["src/common/mixins"],
            "@services": ["src/common/services"],
            "@utils": ["src/common/utils"],
            "@store": ["src/app/store"]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
